<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="186dp"
        tools:layout_editor_absoluteY="79dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/bt_pieton"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_directions_walk_24"
                android:text="" />
            <ImageButton
                android:id="@+id/bt_velo"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="10dp"
                android:src="@drawable/ic_baseline_directions_bike_24"
                android:layout_weight="1" />
            <ImageButton
                android:id="@+id/bt_voiture"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="10dp"
                android:src="@drawable/ic_baseline_time_to_leave_24"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_distance"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="5dp"
                android:layout_width="130dp"
                android:layout_height="20dp"
                android:textSize="15sp"
                android:layout_weight="1"
                android:text="DISTANCE" />
            <TextView
                android:id="@+id/tv_affichage_distance"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:textSize="15sp"
                android:layout_weight="1"
                android:text="" />
        </LinearLayout>

        <SeekBar
            android:id="@+id/sb_distance"
            android:maxHeight="10dp"
            android:minHeight="10dp"
            android:progressDrawable="@drawable/progress_drawable"
            android:thumb="@drawable/thumb"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_denivele"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="5dp"
                android:layout_width="130dp"
                android:layout_height="20dp"
                android:textSize="15sp"
                android:layout_weight="1"
                android:text="DENIVELE" />
            <TextView
                android:id="@+id/tv_affichage_denivele"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:textSize="15sp"
                android:layout_weight="1"
                android:text="" />
        </LinearLayout>

        <SeekBar
            android:id="@+id/sb_denivele"
            android:maxHeight="10dp"
            android:minHeight="10dp"
            android:progressDrawable="@drawable/progress_drawable"
            android:thumb="@drawable/thumb"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_eloignement"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="5dp"
                android:layout_width="130dp"
                android:layout_height="20dp"
                android:textSize="15sp"
                android:layout_weight="1"
                android:text="ELOIGNEMENT" />
            <TextView
                android:id="@+id/tv_affichage_eloignement"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="5dp"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:textSize="15sp"
                android:layout_weight="1"
                android:text="" />
        </LinearLayout>

        <SeekBar
            android:id="@+id/sb_eloignement"
            android:maxHeight="10dp"
            android:minHeight="10dp"
            android:progressDrawable="@drawable/progress_drawable"
            android:thumb="@drawable/thumb"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:id="@+id/nav_host_fragment"
            android:layout_width="320dp"
            android:layout_height="320dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent">
        </FrameLayout>


        <ImageButton
            android:id="@+id/bt_chercher"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_search_24" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
