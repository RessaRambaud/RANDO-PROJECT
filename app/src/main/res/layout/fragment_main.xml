<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.MainFragment_Acceuil">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="306dp"
        android:layout_height="221dp"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="29dp"
        android:src="@drawable/logonew"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="50dp"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="100dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_AutourDeMoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Autour De Moi"
            app:backgroundTint="#FF5722" />

        <Button
            android:id="@+id/btn_CritereDeRecherche"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CRITERE DE RECHERECHE"
            app:backgroundTint="#FF5722" />

        <Button
            android:id="@+id/btn_CommencerUnParcours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COMMENCER UN PARCOURS"
            app:backgroundTint="#FF5722" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_Login_Link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:autoLink="all"
                android:clickable="true"
                android:text="Login |"
                android:textColor="#FF5722"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/tv_CreerUnCompte_Link"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_CreerUnCompte_Link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:autoLink="all"
                android:clickable="true"
                android:text="Creer Un Compte"
                android:textColor="#FF5722"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>